<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
            prefWidth="450.0" styleClass="WhiteBackground" stylesheets="@../css/Style.css"
            xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/">
    <top>
        <StackPane maxWidth="-Infinity" prefHeight="100.0" prefWidth="450.0" BorderPane.alignment="CENTER">

            <Text smooth="false" stroke="BLACK" strokeLineJoin="BEVEL" strokeMiterLimit="0.0" strokeWidth="0.0"
                  text="Character Effect" textAlignment="JUSTIFY" StackPane.alignment="CENTER">
                <font>
                    <Font name="Rockwell Extra Bold" size="25.0"/>
                </font>
            </Text>

        </StackPane>
    </top>

    <center>
        <StackPane prefHeight="650.0" prefWidth="450.0" BorderPane.alignment="CENTER">

            <Text fx:id="description" smooth="false" stroke="BLACK" strokeLineJoin="BEVEL" strokeMiterLimit="0.0"
                  strokeWidth="0.0"
                  text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                  textAlignment="CENTER" wrappingWidth="400.0" BorderPane.alignment="BOTTOM_CENTER"
                  StackPane.alignment="TOP_CENTER">
                <font>
                    <Font name="Cambria" size="12.0"/>
                </font>
            </Text>

            <Text fx:id="availableTiles" smooth="false" stroke="BLACK" strokeLineJoin="BEVEL" strokeMiterLimit="0.0"
                  strokeWidth="0.0" text="Tiles Available: " textAlignment="CENTER" wrappingWidth="400.0"
                  BorderPane.alignment="BOTTOM_CENTER" StackPane.alignment="CENTER">
                <font>
                    <Font name="Cambria" size="16.0"/>
                </font>
            </Text>
            <ChoiceBox fx:id="choiceBox" prefWidth="150.0" styleClass="confirm-button" stylesheets="@../css/Style.css"
                       StackPane.alignment="BOTTOM_CENTER">
                <StackPane.margin>
                    <Insets top="30.0"/>
                </StackPane.margin>
            </ChoiceBox>

        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="100.0" prefWidth="450.0" spacing="20.0">

            <Button fx:id="confirmButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0"
                    styleClass="confirm-button" text="Confirm" textFill="WHITE">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button fx:id="cancelButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0"
                    styleClass="cancel-button" text="Leave" textFill="WHITE">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>

        </HBox>
    </bottom>
</BorderPane>
